<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_shape">

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="196dp"
        android:background="@drawable/custom_dialog_shape"
        android:orientation="vertical"
        app:circularflow_defaultRadius="16dp"
        app:layout_constraintCircleRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="145dp"
            android:background="@drawable/check_email_background"
            android:clickable="false"
            app:srcCompat="@drawable/ic_check_email" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Проверьте Ваш Email"
            android:textAlignment="center"
            android:textColor="#2B2B2B"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Мы отправили код восстановления пароля на вашу электронную почту."
            android:textAlignment="gravity"
            android:textColor="#707B81"
            android:textSize="16dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>